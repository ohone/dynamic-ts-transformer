{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TypeScript",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/dev.ts",
        "runtimeArgs": [
          "--loader",
          "ts-node/esm"
        ],
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }